<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="256dp"
        android:layout_height="238dp"
        android:background="@drawable/main_area_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_main_service"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_main_service_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/applesdgothicneo_m"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="사랑받는 디자이너로 성장하는 방법 알려드립니다."
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_main_service" />

        <ImageView
            android:id="@+id/img_main_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tv_main_service_title"
            app:layout_constraintTop_toBottomOf="@id/tv_main_service_title"
            app:srcCompat="@drawable/ic_star_review_selected" />

        <TextView
            android:id="@+id/tv_main_service_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/applesdgothicneo_l"
            android:includeFontPadding="false"
            android:text="5.0"
            android:textColor="#3c3c3c"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/img_main_star"
            app:layout_constraintStart_toEndOf="@id/img_main_star"/>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="12.5dp"
            android:layout_marginStart="5dp"
            android:background="#3c3c3c"
            app:layout_constraintBottom_toBottomOf="@id/tv_main_service_star"
            app:layout_constraintStart_toEndOf="@id/tv_main_service_star"
            app:layout_constraintTop_toTopOf="@id/tv_main_service_star" />

        <TextView
            android:id="@+id/tv_main_service_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/applesdgothicneo_l"
            android:includeFontPadding="false"
            android:text="192개의 평가"
            android:textColor="#3c3c3c"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>