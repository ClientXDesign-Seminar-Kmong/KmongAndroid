<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/overall"
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:background="@drawable/recyc_box"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/ic_star_review_selected"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <ImageView
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="28dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/ic_star_review_selected"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <ImageView
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/ic_star_review_selected"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <ImageView
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="52dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/ic_star_review_selected"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <ImageView
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="64dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/ic_star_review_unselected"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />


  <TextView
      android:id="@+id/id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="86dp"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/notosanscjkkr_medium"
      android:text="abc01***"
      android:textColor="#000000"
      android:textSize="12sp"
      android:textStyle="normal"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginRight="20dp"
      android:fontFamily="@font/notosanscjkkr_medium"
      android:text="2020.11.11"
      android:textColor="#000000"
      android:textSize="12sp"
      android:textStyle="normal"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <TextView
      android:id="@+id/service"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="50dp"
      android:fontFamily="@font/notosanscjkkr_medium"
      android:text="심볼/엠블럼형 로고"
      android:textColor="#7e7e7e"
      android:textSize="14sp"
      android:textStyle="normal"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <TextView
      android:id="@+id/review"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="76dp"
      android:fontFamily="@font/notosanscjkkr_medium"
      android:text="친절하게 해주셨어요. 감사합니다"
      android:textColor="#000000"
      android:textSize="14sp"
      android:textStyle="normal"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/overall" />

  <ImageView
      android:id="@+id/line2"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="112dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/line"
      app:layout_constraintBottom_toBottomOf="@+id/overall"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>